<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#E4000000"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvIssueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/ivIssueImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/tvIssueName"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvIssueDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivIssueImage"
            android:text="Issue Description"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>